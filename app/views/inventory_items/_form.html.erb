<%= form_for(@inventory_item) do |f| %>

<p>
  <%= f.label :name %>
  <%= f.text_field :name %>
</p>

<p>
  <%= f.label :description %>
  <%= f.text_field :description %>
</p>

<p>
  <%= f.label :unit_price %>
  <%= f.text_field :unit_price %>
</p>

<div class="actions">
  <%= f.submit %>
</div>

<% end %>
