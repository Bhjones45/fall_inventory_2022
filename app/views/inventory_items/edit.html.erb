<h1>Edit <%= @inventory_item.name %></h1>
<br>
<%= form_with url: "/inventory_items/#{@inventory_item.id}", method: :patch, local: true do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name, value: "#{@inventory_item.name}" %><br><br>
  <%= f.label :description, "Description" %>
  <%= f.text_field :description, value: "#{@inventory_item.description}" %><br><br>
  <%= f.label :unit_price, "Unit Price" %>
  <%= f.text_field :unit_price, value: "#{@inventory_item.unit_price}" %><br><br>
  <%= f.submit %>
<% end %>
